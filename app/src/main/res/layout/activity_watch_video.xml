<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/stream_video_progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ProgressBar
            android:id="@+id/stream_video_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/stream_video_progress_hint_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buffering LifeStream"
            android:layout_below="@+id/stream_video_progress_bar"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/black_heavy_translucent"
            android:textColor="@color/white" />
    </RelativeLayout>


</RelativeLayout>